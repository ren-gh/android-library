<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/tv_title_commodity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:text="双十一爆款热卖"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_13"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_commodity"
        android:layout_marginTop="@dimen/dp_10"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/dp_40"
        android:paddingRight="@dimen/dp_40">

        <com.rengh.rlibrary.view.AliButtonCommodity
            android:id="@+id/img_btn_commodity_1"
            android:layout_width="@dimen/dp_133"
            android:layout_height="@dimen/dp_144"
            android:clickable="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="true"
            android:padding="@dimen/dp_0" />

        <com.rengh.rlibrary.view.AliButtonCommodity
            android:id="@+id/img_btn_commodity_2"
            android:layout_width="@dimen/dp_133"
            android:layout_height="@dimen/dp_144"
            android:layout_marginLeft="@dimen/dp_10"
            android:clickable="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="true"
            android:padding="@dimen/dp_0" />

        <com.rengh.rlibrary.view.AliButtonCommodity
            android:id="@+id/img_btn_commodity_3"
            android:layout_width="@dimen/dp_133"
            android:layout_height="@dimen/dp_144"
            android:layout_marginLeft="@dimen/dp_10"
            android:clickable="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="true"
            android:padding="@dimen/dp_0" />

        <com.rengh.rlibrary.view.AliButtonCommodity
            android:id="@+id/img_btn_commodity_4"
            android:layout_width="@dimen/dp_133"
            android:layout_height="@dimen/dp_144"
            android:layout_marginLeft="@dimen/dp_10"
            android:clickable="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="true"
            android:padding="@dimen/dp_0" />
    </LinearLayout>
</RelativeLayout>